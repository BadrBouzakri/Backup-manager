# Configuration Flask
FLASK_APP=run.py
FLASK_ENV=production
SECRET_KEY=change-me-with-a-strong-secret-key

# Configuration base de donn√©es
DATABASE_URI=postgresql://backup_manager:password@db/backup_manager
DB_USER=backup_manager
DB_PASSWORD=password
DB_NAME=backup_manager

# Configuration email
MAIL_SERVER=smtp.example.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=your-email@example.com
MAIL_PASSWORD=your-email-password
MAIL_DEFAULT_SENDER=no-reply@example.com

# Configuration application
DEFAULT_RETENTION_DAYS=2
ALLOW_REGISTRATION=True

# Configuration Rclone
RCLONE_CONFIG_PATH=/app/instance/rclone.conf
RCLONE_MOUNT_BASE=/app/storage/mounts
STORAGE_PATH=/app/storage
BACKUP_PATH=/app/storage/backups
LOGS_PATH=/app/logs
